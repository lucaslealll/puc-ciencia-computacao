<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/world"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="251dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:animationCache="false"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:paddingBottom="20dp"
            android:text="City Details"
            android:textAllCaps="true"
            android:textColor="@color/background"
            android:textSize="35dp"
            android:textStyle="normal|bold" />

        <ScrollView
            style="@android:style/Widget.ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay">

            <TextView
                android:id="@+id/input_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textAlignment="inherit"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </ScrollView>

    </LinearLayout>

    <EditText
        android:id="@+id/ipt_city"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="1"
        android:hint="SÃ£o Paulo..."
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/background"
        android:textColorHighlight="@color/box_string"
        android:textColorHint="@color/box_string"
        android:textColorLink="@color/background" />

    <Button
        android:id="@+id/botaoBusca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff"
        android:text="PESQUISAR CIDADE"
        android:textColor="@color/clickable"
        app:cornerRadius="100dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconTint="@color/clickable"
        app:iconTintMode="multiply" />

    <Button
        android:id="@+id/botao_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#AF0C00"
        android:onClick="sair"
        android:text="Sair"
        android:textColor="@color/box"
        app:cornerRadius="100dp"
        app:iconTint="@color/background"
        app:iconTintMode="src_atop"
        app:rippleColor="@color/background" />
</LinearLayout>